# top-most EditorConfig file
root = true

# Unix-style line ending
[*]
end_of_line = lf

# Matches multiple files with brace expansion notation
# Set default charset
[*.{sh,go,java,md}]
charset = utf-8

[*.md]
indent_style = space
indent_size = 2

[{.travis.yml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
